# ==============================================
# LeadLab API - Environment Configuration
# ==============================================
# IMPORTANT: This is an example file. Copy to .env and update with your actual values.
# Never commit .env files to version control!

# Application Settings
APP_NAME=LeadLab
APP_ENV=development
APP_DEBUG=True
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Security Keys (REQUIRED - Generate these!)
# SECRET_KEY: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-ME-generate-with-openssl-rand-hex-32-REQUIRED
# TOKEN_ENCRYPTION_KEY: Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=CHANGE-ME-generate-with-cryptography-fernet-REQUIRED
API_SECRET_KEY=CHANGE-ME-another-secure-random-string-REQUIRED

# Database Configuration (REQUIRED)
# Format: mysql+pymysql://username:password@host:port/database?charset=utf8mb4
DATABASE_URL=mysql+pymysql://your_username:your_password@localhost:3306/leadlab?charset=utf8mb4

# MySQL Connection Pool Settings
MYSQL_POOL_SIZE=5
MYSQL_POOL_MAX_OVERFLOW=2
MYSQL_POOL_TIMEOUT=30
MYSQL_POOL_RECYCLE=300

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP Email Configuration
SMTP_HOST=your-smtp-host.com
SMTP_PORT=465
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password-here-REQUIRED
SMTP_TLS=True
EMAILS_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=LeadLab

# Invoice Email (separate from notification emails)
INVOICE_EMAIL=invoice@yourdomain.com
INVOICE_EMAIL_PASSWORD=your-invoice-email-password-here-REQUIRED

# Crystal Knows API (Optional - for psychometric analysis)
CRYSTAL_KNOWS_API_KEY=your-crystal-api-key-here-optional
CRYSTAL_KNOWS_BASE_URL=https://api.crystalknows.com/v1

# LinkedIn OAuth Configuration (REQUIRED for LinkedIn features)
LINKEDIN_CLIENT_ID=your-linkedin-client-id-REQUIRED
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-REQUIRED
LINKEDIN_REDIRECT_URI=https://yourdomain.com/linkedin/callback
LINKEDIN_SCOPE=openid profile email w_member_social

# Stripe Payment Processing (REQUIRED for billing)
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-REQUIRED
STRIPE_SECRET_KEY=sk_test_your-secret-key-REQUIRED
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-REQUIRED
STRIPE_CURRENCY=usd

# Token Pricing
TOKEN_TO_USD_RATE=1.0
PSYCHOMETRIC_DATA_PRICE=1.40

# Celery Task Queue (Optional)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS Origins (comma-separated list or JSON array)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
# UPLOAD_DIR will be auto-set to backend/uploads/
